<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    style="?attr/selectableItemBackground"
    android:background="@color/white"
    android:elevation="2dp"
    android:layout_marginStart="@dimen/item_horizontal_margin"
    android:layout_marginEnd="@dimen/item_horizontal_margin"
    android:layout_marginTop="@dimen/item_vertical_margin"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/picture"
        android:src="@drawable/bh"
        android:scaleType="fitXY"
        android:layout_width="120dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/incident_description"
        android:layout_toEndOf="@+id/picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/incident_type"
        android:layout_below="@+id/incident_description"
        android:layout_toEndOf="@+id/picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/incident_date"
        android:layout_below="@+id/incident_type"
        android:layout_toEndOf="@+id/picture"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem" />

</RelativeLayout>
